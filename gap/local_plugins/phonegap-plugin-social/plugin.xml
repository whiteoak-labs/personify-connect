<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="phonegap-plugin-social"
    version="1.0.0">

    <name>Social</name>
    <description>Phonegap plugin allowing access social media sharing.</description>
    <license>MIT</license>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>    

    <js-module src="www/social.js" name="Social">
        <clobbers target="window.plugins.social" />
    </js-module>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Social">
                <param name="ios-package" value="Social" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
                
        <header-file src="src/ios/Social.h" />
        <source-file src="src/ios/Social.m" />
    </platform>

    <!-- android -->
    <platform name="android">
        <framework src="com.android.support:support-v4:24.2.0" />
        
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Social">
                <param name="android-package" value="net.dynagility.personify.plugin.Social" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        
        <source-file src="src/android/Social.java" target-dir="src/net/dynagility/personify/plugin" />
        <source-file src="src/android/ShareOnFacebook.java" target-dir="src/net/dynagility/personify/plugin" />
        <source-file src="src/android/libs/facebook-api.jar" target-dir="libs" />
        <source-file src="src/android/libs/facebooksdk.jar" target-dir="libs" />                   
    </platform>
</plugin>
