          <include name="**/*"/>
        </fileset>
      </delete>
    </then>
  </if>
  <copy todir="/home/ticook/Documents/dev/workspace/personify/connect/gap/www" encoding="UTF-8" overwrite="true" outputencoding="UTF-8">
