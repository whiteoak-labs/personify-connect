    <and>
      <os family="windows"/>
    </and>
  </condition>
  <if>
    <isset property="isWindows"/>
    <then>
      <exec failonerror="true" executable="cmd">
        <arg value="/c"/>
        <arg value="phonegap"/>
        <arg value="build"/>
        <arg value="android"/>
        <arg value="--release"/>
        <arg value="-d"/>
      </exec>
    </then>
    <else>
      <exec failonerror="true" executable="phonegap">
        <arg value="build"/>
        <arg value="android"/>
        <arg value="--release"/>
        <arg value="-d"/>
      </exec>
    </else>
  </if>
  <echo level="info" message="!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"/>
